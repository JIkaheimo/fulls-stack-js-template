{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"],
      "@mw/*": ["./src/middlewares/*"],
      "@db/*": ["./src/db/*"]
    },
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "../dist",
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "files": ["./index.d.ts"],
  "include": ["src/**/*.ts*"],
  "exclude": ["node_modules", "build"]
}
